{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noLib": false,
    "jsx": "react",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.core",
      "es2016.array.include",
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": true
}
