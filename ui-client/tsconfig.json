{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "(styled.div)",
          "styled",
          "css",
          "sty"
        ]
      }
    ],
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noLib": false,
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "types": [
      "webpack-env",
      "node"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.core",
      "es2016.array.include",
      "es2017",
      "esnext.asynciterable",
      "esnext"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/__before__/*"
  ],
  "compileOnSave": true
}
