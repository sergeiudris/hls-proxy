{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noLib": false,
    "jsx": "preserve",
    "sourceMap": false,
    "outDir": "dist",
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/kafka"
  ],
  "compileOnSave": true
}
