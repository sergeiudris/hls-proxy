{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noLib": false,
    "jsx": "preserve",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.core",
      "es2016.array.include",
      "es2017"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
